<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sbb" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Smart Boxing Bag</name>
    <description>
        Smart Boxing Bag
    </description>
    <author email="luis.ruizrozo@davinci.edu.ar" href="http://sbb.com">
        SBB
    </author>
    <content src="index.html" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <splash src="/www/splash.png" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
